    "version": "0.2.0",
    "configurations": [
        {
            "name": "Current Unit Tests",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "vstest.console.exe",
            "args": ["x64\\Debug\\Server.Tests.dll"],
            "cwd": "${workspaceRoot}",
            "stopAtEntry": false,
            "preLaunchTask": "MsBuild All",
            "console": "integratedTerminal",
        },
        {
            "name": "Run Current Project",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "x64\\Debug\\${fileBasenameNoExtension}.exe",
            "args": [""],
            "cwd": "${workspaceRoot}",
            "stopAtEntry": false,
            "preLaunchTask": "MsBuild Current Project",
            "console": "integratedTerminal",
        }
    ]
}